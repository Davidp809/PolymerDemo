<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="import" href="@Url.Content("~/Content/polymer.html")">
    @*<link rel="import" href="@Url.Content("~/Content/iron_components/iron-list/iron-list.html")">*@
</head>
<body>
    <paper-drawer-panel force-narrow="true" right-drawer>
        <div drawer style="background-color:white">
            content
        </div>
            <div main>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Polymer Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("About", "About", "Home")<paper-ripple initial-opacity=".5"></paper-ripple></li>
                            <li><a href="#" paper-drawer-toggle>Toggle Drawer</a><paper-ripple initial-opacity=".8"></paper-ripple></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container body-content">
                    @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
        </paper-drawer-panel>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/webcomponents")
        @RenderSection("scripts", required: false)
</body>
</html>
